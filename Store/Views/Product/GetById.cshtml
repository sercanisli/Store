@model Product

<div class="row">
    <div class="col-md-12">
        <div class="text-center">
            <h6 class="display-6">
                @Model.ProductName
            </h6>
            <img width="500" class="border border-light img-fluid shadow rounded-3 my-3" src="@Model?.ImageUrl" alt="@Model.ProductName" />
            <p class="lead text-danger">@Model.Price</p>
        </div>
    </div>
</div>
<div class="btn-group">
    <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Home</a>
    <a class="btn btn-outline-primary" asp-controller="Product" asp-action="Index">Products</a>
</div>
