@model ProductDTOForUpdate

<div class="text-center">
    <div class="display-6">Update</div>
</div>

<form method="post" asp-action="Update" enctype="multipart/form-data">
    <div class="text-danger " asp-validation-summary="All"></div>
    <input type="hidden" asp-for="Id"/> 
    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input class="form-control" asp-for="ProductName" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Summary"></label>
        <input class="form-control" asp-for="Summary" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input class="form-control" asp-for="Price" />
    </div>
    <div class="form-check form-switch">
        <input asp-for="Showcase" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Showcase</label>
    </div>
    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-items="@ViewBag.Categories" asp-for="CategoryId"></select>
    </div>
    <div class="form-group my-3">
        <img class="rounded shadow" width="150" src="@Model?.ImageUrl"/>
    </div>
    <div class="form-group my-3">
        <label asp-for="ImageUrl"></label>
        <input class="form-control" name="file" type="file" />
    </div>
    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i>Update</button>
            <a asp-action="Index" class="btn btn-outline-pimary"><i class="fa fa-list"></i>Products</a>
        </div>
    </div>
</form>