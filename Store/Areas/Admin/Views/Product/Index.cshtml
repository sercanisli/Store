@model ProductListViewModel

<div class="text-center">
    <div class="display-6">Products</div>
    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create">
            <i class="fa fa-plus"></i>Create
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("CategoriesMenu")
        @await Component.InvokeAsync("ProductFilterMenu")
        <div products="" number="3"></div>
    </div>
    <div class="col-md-9">
        <table class="table table-striped table-hover ">
            <thead>
            <tr>
                <th>Id</th>
                <th>Image Url</th>
                <th>ProductName</th>
                <th>Showcase</th>
                <th>Price</th>
                <th>Operation</th>
            </tr>
            </thead>
            <tbody>
            @foreach (Product product in Model.Products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>
                        <img class="border border-dark rounded" src="@product.ImageUrl" alt="@product.ProductName" width="50" />
                    </td>
                    <td>@product.ProductName</td>
                    <td>
                        <div class="form-check form-switch">
                            <input type="checkbox" class="form-check-input" checked="@product.ShowCase" disabled />
                        </div>
                    </td>
                    <td>@product.Price</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@product.Id"><i class="fa fa-trash"></i>Delete</a>
                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@product.Id"><i class="fa fa-edit"></i>Edit</a>
                            <a class="btn btn-info" target="_blank" asp-area="" asp-controller="Product" asp-action="GetById" asp-route-id="@product.Id"><i class="fa fa-search"></i></a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <div>
            <div page-model="@Model.Pagination"
                 page-action="Index"
                 page-classes-enabled="true"
                 page-class="btn"
                 page-class-normal ="btn-outline-dark"
                 page-class-selected="btn-primary"
                 class="btn-group">

            </div>
        </div>
    </div>
</div>


